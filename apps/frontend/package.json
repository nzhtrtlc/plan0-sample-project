{
   "name": "frontend",
   "private": true,
   "version": "2.0.0",
   "type": "module",
   "scripts": {
      "dev": "vite",
      "build": "tsc -b && vite build",
      "lint": "biome check .",
      "lint:fix": "biome check . --write",
      "format": "biome format . --write",
      "preview": "vite preview",
      "deploy": "npm run deploy:frontend && npm run deploy:backend",
      "deploy:frontend": "npm run build -w apps/frontend && sudo cp -r apps/frontend/dist/* /var/www/frontend/",
      "deploy:backend": "npm run build -w apps/backend && pm2 restart all"
   },
   "dependencies": {
      "@tanstack/pacer": "^0.17.1",
      "@tanstack/react-pacer": "^0.19.1",
      "react": "^19.2.0",
      "react-dom": "^19.2.0"
   },
   "devDependencies": {
      "@biomejs/biome": "2.3.11",
      "@tailwindcss/vite": "^4.1.18",
      "@types/node": "^24.10.1",
      "@types/react": "^19.2.5",
      "@types/react-dom": "^19.2.3",
      "@vitejs/plugin-react": "^5.1.1",
      "tailwind-merge": "^3.4.0",
      "tailwindcss": "^4.1.18",
      "typescript": "~5.9.3",
      "vite": "^7.2.4"
   }
}